<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .plan-card {
            transition: transform 0.2s;
        }
        .plan-card:hover {
            transform: scale(1.02);
        }
        .best-plan {
            border: 2px solid #28a745;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Electricity Comparison Results</h1>
        <div id="error" class="alert alert-danger d-none" role="alert"></div>
        <div id="bestPlan" class="card mb-4 best-plan">
            <div class="card-header bg-success text-white">
                <h2 class="card-title m-0">Best Plan</h2>
            </div>
            <div class="card-body">
                <h3 class="card-title"> <%= results.bestPlan.planName %></h3>
                <p class="card-text"><strong>Supplier:</strong> <%= results.bestPlan.supplier %></p>
                <p class="card-text"><strong>Annual Cost:</strong> €<%= results.bestPlan.cost.toFixed(2) %></p>
            </div>
        </div>
        <h3>All Plans</h3>
        <div id="allPlans" class="row">
            <% results.plans.forEach(function(plan) { %>
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card h-100 plan-card <%= plan.planName === results.bestPlan.planName ? 'best-plan' : '' %>">
                        <div class="card-body">
                            <h4 class="card-title"><%= plan.planName %></h4>
                            <p class="card-text"><strong>Supplier:</strong> <%= plan.supplier %></p>
                            <p class="card-text"><strong>Annual Cost:</strong> €<%= plan.cost.toFixed(2) %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>